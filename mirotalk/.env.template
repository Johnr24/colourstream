# MiroTalk Environment Variables

# Domain Configuration
HOST=live.colourstream.example.com
VIDEODOMAIN=video.colourstream.example.com

# Security Settings
HTTPS=true
CORS_ENABLED=true

# Turn Server Configuration
TURN_ENABLED=true
TURN_URLS=turn:turn.colourstream.example.com:3478
TURN_USERNAME=colourstream
TURN_PASSWORD=your_turn_password

# API Settings
API_KEY_SECRET=your_api_key_secret

# Host Settings
HOST_PROTECTED=true
HOST_USERNAME=admin
HOST_PASSWORD=password

# WebSocket Server Configuration
NODE_ENV=production
PROTOCOL=https
PORT=3443

# SSL/TLS Certificates (for development only, use Traefik for production)
SSL_KEY=./certs/key.pem
SSL_CERT=./certs/cert.pem
SSL_PASSPHRASE=

# Room Settings
REQUIRE_PASSCODE=false
SURVEY_ENABLED=false
REDIRECT_URL=
NOTIFY_OMEGLE_URL=false

TUN_SERVER_ENABLED=true
TURN_SERVER_URL=turn:video.colourstream.example.com:3480
NODE_VERSION=22.14.0
HOSTNAME=mirotalk
YARN_VERSION=1.22.22

HOST_USER_AUTH=false
MIROTALK_API_KEY_SECRET=your_mirotalk_api_key_here
JWT_KEY=your_jwt_key_here
HOST_USERS=[{"username":"globalUsername", "password":"globalPassword"}]
JWT_EXP=24h

SHLVL=1
HOME=/root
TRUST_PROXY=true
TURN_SERVER_ENABLED=true
TURN_SERVER_USERNAME=colourstream
TERM=xterm
SEVER_TUNNEL=false
PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
TURN_SERVER_CREDENTIAL=your_turn_password
STUN_SERVER_URL=stun:stun.l.google.com:19302
OIDC_ENABLED=false
PWD=/src 