<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Colourstream Admin</title>
    <link rel="stylesheet" href="/css/main.css">
    <script src="/js/admin.js"></script>
</head>
<body>
    <div class="header">
        <h1>Colourstream Admin Dashboard</h1>
        <a href="/admin/logout" class="logout-btn" style="text-decoration: none; color: white;">Logout</a>
    </div>

    <div class="create-room">
        <h2>Create New Room</h2>
        <form id="createRoomForm">
            <div class="form-group">
                <label for="customLink">Custom Link (optional):</label>
                <div style="display: flex; gap: 10px;">
                    <input type="text" id="customLink" name="customLink" placeholder="Enter custom link or generate random">
                    <button type="button" onclick="generateRandomId()" class="btn" style="white-space: nowrap;">Generate Random</button>
                </div>
            </div>
            <button type="submit" class="btn">Create Room</button>
        </form>
    </div>

    <h2>Active Rooms</h2>
    <table class="rooms-table">
        <thead>
            <tr>
                <th>Room ID</th>
                <th>Custom Link</th>
                <th>Created</th>
                <th>Last Accessed</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% rooms.forEach(room => { %>
                <tr>
                    <td><%= room.roomId %></td>
                    <td><%= room.customLink || '-' %></td>
                    <td class="timestamp" data-time="<%= room.createdAt %>"><%= new Date(room.createdAt).toLocaleString() %></td>
                    <td class="timestamp" data-time="<%= room.lastAccessed %>"><%= new Date(room.lastAccessed).toLocaleString() %></td>
                    <td><span class="status" data-status="<%= room.status %>"><%= room.status %></span></td>
                    <td>
                        <button class="copy-btn" onclick="copyRoomLink('<%= room.customLink || room.roomId %>')">Copy Link</button>
                        <button class="delete-btn" onclick="deleteRoom('<%= room._id %>')">Delete</button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>

</body>
</html>
